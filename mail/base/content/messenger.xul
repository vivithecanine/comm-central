</vbox>

  <!-- navigation-toolbox with main menubar and tabs toolbar -->
#include mainNavigationToolbox.inc

    <toolbar id="tabs-toolbar">
      <!-- class tabmail-tabs is unused and only maintained for add-ons. -->
